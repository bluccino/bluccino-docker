#!/bin/bash
# gic: git commit (after git add all)

   if [ "$1" == "-?" ]; then
      echo "   usage: gic 'message'   # git commit (after git add all)"
      echo '   see also: gic, gik, gil, gip, gir, gis, tag'
      exit 1
   fi

   if [ "$1" == "" ]; then
      echo "   usage: gic 'message'   # git commit (after git add all)"
      exit 1
   fi

   if [ "$2" != "" ]; then
      echo "   usage: gic 'message'   # git commit (after git add all)"
      exit 1
   fi

# updating

   GITROOT=`python3 $BIN/python/gitroot.py`
   UPDATE=$GITROOT/.update

   if [ -f $UPDATE ]; then
      ec -y '   updating files ...'
      $UPDATE               # update files
   fi

# staging files

   echo '=> git add -A'
   git add -A

# commiting

   echo "=> git commit -m'"$1"'"
   git commit -m "$1"
